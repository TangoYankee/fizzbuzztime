{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "webpack",
        "jest"
    ],
    "types":["webpack-env"]
}
