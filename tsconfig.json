{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./src/**/*test.ts",
        "./src/**/*test.tsx"
    ]
}
